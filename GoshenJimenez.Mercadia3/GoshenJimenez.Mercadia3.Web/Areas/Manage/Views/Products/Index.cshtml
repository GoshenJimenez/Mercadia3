            <div class="col-lg-12 col-md-12 col-12">

                <div class="row">
                    <div class="col-12">
                        <!-- Shop Top -->
                        <div class="shop-top">

                            <div class="shop-shorter">
                                <div class="single-shorter">
                                    <label>Search :</label>
                                    <input type="text" value="@Model.Products.Keyword" name="search" id="keyword">
                                </div>
                                <div class="single-shorter">
                                    <label>Show :</label>
                                    <select>
                                        <option selected="selected">09</option>
