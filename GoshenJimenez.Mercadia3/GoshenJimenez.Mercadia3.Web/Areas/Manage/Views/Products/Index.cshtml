                    {
                        if (Model.Products.Items != null)
                        {
                            if (Model.Products.Items.Count > 0)
                            {

                                <div class="row">
                                    <div class="col-12">
                                        <table class="table shopping-summery">
                                            <thead>
                                                <tr class="main-hading">
                                                    <th>PRODUCT</th>
